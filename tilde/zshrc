# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

fpath=("$HOME/.zsh/completions" $fpath)

ZSH_CUSTOM=$HOME/.zsh/oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="bitboxer"

# Comment this out to disable bi-weekly auto-update checks
DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable command autocorrection
DISABLE_CORRECTION="true"

# ignore duplicates
setopt HIST_IGNORE_DUPS

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(gitfast dirhelper extract forklift jump chruby gem tmuxinator mix-fast docker docker-compose)

export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANGUAGE="en_US"
export LANG="en_US.UTF-8"

source $ZSH/oh-my-zsh.sh

export EDITOR=nvim

source <(antibody init)
antibody bundle < ~/.zsh/bundles.txt

export ZSH_PLUGINS_ALIAS_TIPS_TEXT="ðŸ’¡ Alias tip: "

source ~/.zsh/paths.sh
source ~/.zsh/aliases.sh
source ~/.zsh/colorify.sh
source ~/.zsh/fzf.sh

# Enable erlang shell history
export ERL_AFLAGS="-kernel shell_history enabled"
# Disable spring in rails
export DISABLE_SPRING='SORRY_BUT_YOU_ARE_WAY_TOO_PROBLEMATIC'

export GPG_TTY=$(tty)

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

if [ ! -e "/etc/is_vagrant_vm" ]; then
  eval `ssh-agent -s` > /dev/null
  ssh-add -A 2> /dev/null
else
  # SSH sock connected in my tmux session.
  #
  # See this answer for why I need this here:
  # https://unix.stackexchange.com/a/76256/246406
  SOCK="/tmp/ssh-agent-$USER-screen"
  if test $SSH_AUTH_SOCK && [ $SSH_AUTH_SOCK != $SOCK ]; then
    rm -f /tmp/ssh-agent-$USER-screen
    ln -sf $SSH_AUTH_SOCK $SOCK
    export SSH_AUTH_SOCK=$SOCK
  fi
fi

source ~/.secrets

. $HOME/.asdf/asdf.sh

. $HOME/.asdf/completions/asdf.bash

test -e "${HOME}/.asdf/plugins/java/set-java-home.sh" &&  source "${HOME}/.asdf/plugins/java/set-java-home.sh"

export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

source <(hcloud completion zsh)
