# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

ZSH_CUSTOM=$HOME/.zsh/oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="bitboxer"

# Comment this out to disable bi-weekly auto-update checks
DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable command autocorrection
DISABLE_CORRECTION="true"

# ignore duplicates
setopt HIST_IGNORE_DUPS

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(brew dirhelper extract forklift jump rbenv gem tmuxinator)

source $ZSH/oh-my-zsh.sh

export EDITOR=nvim

source ~/.zsh-open-pr/open-pr.plugin.zsh
source ~/.zsh/paths.sh
source ~/.zsh/aliases.sh
source ~/.zsh/bitcrowd.sh
source ~/.zsh/colorify.sh
source ~/.zsh/fzf.sh

source ~/.secrets

source ~/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

export DISABLE_SPRING='SORRY_BUT_YOU_ARE_WAY_TOO_PROBLEMATIC'
### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# Use ~~ as the trigger sequence instead of the default **
export FZF_COMPLETION_TRIGGER='~~'
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
