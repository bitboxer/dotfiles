[user]
	name = Bodo Tasche
	email = bodo@wannawork.de

[alias]
  co = "!f() { echo 'Please use gsw or git restore'; }; f"
  lg = log --color --graph --pretty=format:'%C(yellow)%h%Creset %C(green)%s%Creset %C(red)(%cr)%Creset - %an'
  unmerged = !git branch -r --no-merged | grep -v HEAD | xargs -L1 git --no-pager log --pretty=tformat:'%Cgreen%d%Creset - %h by %an (%Cblue%ar%Creset)' -1
  merged = !git branch -r --merged | grep -v HEAD | xargs -L1 git --no-pager log --pretty=tformat:'%Cgreen%d%Creset - %h by %an (%Cblue%ar%Creset)' -1
  pf = push --force-with-lease
  up = pull --rebase --autostash
  unpushed = log --branches --not --remotes --no-walk --decorate --oneline

[color]
  diff = auto
  status = auto
  branch = auto

[core]
	excludesfile = /Users/tasche/.gitignore
  editor = nvim
	attributesfile = ~/.gitattributes
  pager = delta

[apply]
  whitespace = nowarn

[github]
  user = bitboxer

[merge]
  tool = meld
  conflictstyle = diff3

[push]
  default = simple
	autoSetupRemote = true

[tig]
  line-graphics = "utf-8"

[git-up "bundler"]
  check = true

[rebase]
  autosquash = true

[diff]
  compactionHeuristic = true
	colorMoved = default
	external = difft

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[pull]
	ff = only

[init]
  templateDir = ~/.git/template/
	defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true  # use n and N to move between diff sections
  line-numbers = true
  hunk-header-style = omit
[add "interactive"]
	useBuiltin = false
[commit]
	template = /Users/tasche/.stCommitMsg
